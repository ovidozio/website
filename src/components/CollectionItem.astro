---
const { src_img, title, description, link } = Astro.props;
---

<div class="collection-item">
  <a href={link} class="collection-item-link">
    <div class="collection-item-image">
      <img src={src_img} alt={title} loading="lazy" />
    </div>
    <div class="content padding">
      <h3 class="content">{title}</h3>
      <p class="content">{description}</p>
    </div>
  </a>
</div>

<style>
.collection-item {
    border: 4px solid #f2f7fc;
    border-radius: 2px;
    margin-left: auto;
    margin-right: auto;
    padding-left: 0;
    padding-right: 0;
    height: 300px;
}

.collection-item-image {
    height: 55%;
    overflow: hidden;
}

.collection-item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
}

.content.padding {
    border-top: 4px solid #f2f7fc;
    padding: 13px 12px;
}

.content {
    line-height: 2;
    margin-top: 0;
    margin-left: 0;
    margin-bottom: 0;
    text-align: left;
    color: #f2f7fc;
}

h3 {
    font-size: 20px;
}

p {
    font-size: 14px;
}

</style>

